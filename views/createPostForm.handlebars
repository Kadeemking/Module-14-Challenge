<div class="card">
  <div class="card-header">
    <h3 class="text-info">Create a New Post:</h3>
</div>
    <form class="form new-project-form p-3">
      <div class="form-group">
        <h4 for="project-name" class="text-primary">Title:</h4>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>

      <div class="form-group">
        <h4 for="project-desc" class="text-primary">Content:</h4>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create Post</button>
      </div>
    </form>
</div>

<script src="./js/createPost.js"></script>
