<div class="row">
  <div class="col-auto">
    <h2 class="text-primary">Welcome, {{name}}!</h2>
  </div>
  <div>
    <a href="/create-post-form" class="btn btn-primary text-info">+ New Post</a>
  </div>
</div>

<div class="row mt-4">

  {{#if projects.length}}
  <div class="col-md-9 project-list">
    <h3 class="text-primary">Current Posts:</h3>

    {{#each projects as |project|}}
<div class="row mb-2 card">
      <div class="card-header w-100 display-flex justify-space-between">
        <h4><a href="/project/{{project.id}}" class="no-button">{{project.name}}</a></h4>
        <p class="text-info">Created on {{format_date date_created}}</p>
      </div>
      <div class="card-body">
        <p>{{project.description}}</p>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
    <h3 class="container mt-4 text-primary">You haven't created any posts yet.</h3>
  {{/if}}
</div>

<script src="./js/viewPosts.js"></script>
